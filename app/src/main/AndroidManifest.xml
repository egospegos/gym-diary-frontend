<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.StatisticActivity"></activity>
        <activity android:name=".activity.admin.AdminNewExerciseActivity" />
        <activity android:name=".activity.admin.AdminMainActivity" />
        <activity android:name=".activity.admin.AdminExerciseActivity" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.SetInformationActivity" />
        <activity android:name=".activity.TrainingOnDateActivity" />
        <activity android:name=".activity.ExerciseForTrainingActivity" />
        <activity android:name=".activity.TrainingActivity" />
        <activity android:name=".activity.SelectedExerciseActivity" />
