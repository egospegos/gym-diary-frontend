<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <ImageView
        android:id="@+id/trOnDateImage"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trOnDateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название:" />

        <TextView
            android:id="@+id/trOnDateMuscles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мышцы:" />

        <TextView
            android:id="@+id/trOnDateWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вес:" />

        <TextView
            android:id="@+id/trOnDateRepeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Повторения:" />


        <TextView
            android:id="@+id/trOnDateApproaches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подходы:" />

    </LinearLayout>
</LinearLayout>